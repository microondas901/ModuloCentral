{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "yarn",
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "install"
        },
        {
            "taskName": "upgrade",
            "args": ["upgrade"]
        },
        {
            "taskName": "watch",
            "isBuildCommand": true,
            "args": ["run", "watch"]
        }
    ]
}